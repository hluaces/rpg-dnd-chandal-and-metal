---
layout: layouts/base.njk
---
<article class="scroll">
  {% set crumbs = breadcrumbs or (page | autoBreadcrumbs) %}
  {% if crumbs.length > 0 %}
    <div class="breadcrumbs">
      {% for crumb in crumbs %}
        {% if crumb.url and not loop.last %}
          <a href="{{ crumb.url }}">{{ crumb.label }}</a>
        {% elif loop.last %}
          {{ title }}
        {% else %}
          {{ crumb.label }}
        {% endif %}
        {% if not loop.last %} Â· {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  <h1>{{ title }}</h1>
  {{ content | safe }}
</article>
